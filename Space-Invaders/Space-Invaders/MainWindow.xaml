<Window x:Class="Space_Invaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Invaders"
        mc:Ignorable="d"
        Title="Space Invaders C#" Height="700" Width="800" FocusManager.FocusedElement="{Binding ElementName=mainCanvas}">
    <Canvas Name="mainCanvas" Background="#000" Focusable="True" KeyDown="Canvas_KeyIsDown" KeyUp="Canvas_KeyIsUp">
        <Rectangle Name="playerRectangle" Fill="#fff" Height="65" Width="55" Canvas.Left="568" Canvas.Top="594" />
    </Canvas>
</Window>
